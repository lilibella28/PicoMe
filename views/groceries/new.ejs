<%- include('../partials/header') %>

   <form action="/groceries"  method="POST" class="container row">
    <h4>Hi, Lili Montano</h4>

     <h4>Order Here</h4>
     <div class="input-field col s5">
     <input type="text" name="itemName">
     <label for="itemName"> Item name:</label>
      </div>
      <div class="input-field col s5">
     <input type="number" name="itemNumber">
     <label for="itemNumber"> Amount </label>
     </div>
      
    </div>
    
      
    <div class="center-align">

      <button class="btn waves-effect  waves-black" type="submit" ><i class="material-icons "></i>Add</button>
    </div>

   </form>


      <table class="container">
         <thead>
         <tr>
         <th>Item Name</th>
          <th>Item  number</th>
         </tr>
         </thead>
          <tbody>
    <%groceryItems.forEach(function(m) { %>
      <tr>
        <td><%= m.itemName %></td>
        <td><%= m.itemNumber %></td>
      </tr>
      <% }); %>
    </tbody>
      </table>

   
      <%- include('../partials/footer') %>